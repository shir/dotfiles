# Useful unix commands
alias ls="ls -G" # Color listing
alias ll="ls -l"
alias g="grep --color=auto -n"
alias gr="g -R"

# Git

alias gst="git status"
alias ga="git add"
alias gl="git pull"
alias gp="git push"
alias gc="git commit"
alias gcm="git commit -m"
alias gd="git diff"
alias gdc="git diff --cached"
alias glg="git log"
alias gb="git branch"
alias gco="git checkout"
